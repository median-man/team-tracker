<main class="container">
  {{> page-header heading="Your Teams"}}
  {{#if teams.length}}
  <a href="/teams/add">+ Add a team</a>
  <table class="table">
    <thead>
      <tr>
        <th>Team</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {{#each teams}}
      <tr>
        <td><a href="/teams/{{id}}">{{title}}</a></td>
        {{!--format date on client side to reflect correct time zone--}}
        <td data-ts="{{createdAt}}"></td>
        <td>
          <a class="btn emoji-btn add-note" href="/teams/{{id}}/add-note"
            aria-label="create a note for {{title}}">📝</a>
          <button class="btn emoji-btn delete-team" value="{{id}}" aria-label="delete {{title}}">❌</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  {{else}}
  <p class="my-4">
    You don't have any teams yet!
  </p>
  <a class="btn btn-primary btn-lg" href="/teams/add">Add a team</a>
  {{/if}}
</main>
<script src="/js/teams.js"></script>