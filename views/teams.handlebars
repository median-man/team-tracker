<main class="container">
  {{> page-header heading="Your Teams"}}
  <a href="/teams/add">+ Add a team</a>
  <table class="table">
    <thead>
      <tr>
        <th>Team</th>
        <th>Created</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each teams}}
      <tr>
        <td><a href="/teams/{{id}}">{{title}}</a></td>
        {{!--format date on client side to reflect correct time zone--}}
        <td data-ts="{{createdAt}}"></td>
        <td>
          <button class="btn x-btn delete-team" value="{{id}}" aria-label="delete {{title}}">❌</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</main>
<script src="/js/teams.js"></script>